@model IEnumerable<E_Commerce.Domain.ViewModels.ProductVM.ProductsVM>

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2>List of Products</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>Picture</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/img/@item.ImageUrl" /></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>



